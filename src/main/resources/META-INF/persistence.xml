<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="default">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>cn.gson.demo.model.pojos.Department</class>
    <class>cn.gson.demo.model.pojos.Dept</class>
    <class>cn.gson.demo.model.pojos.Employee</class>
    <class>cn.gson.demo.model.pojos.EmpRole</class>
    <class>cn.gson.demo.model.pojos.Perm</class>
    <class>cn.gson.demo.model.pojos.Roleinfo</class>
    <class>cn.gson.demo.model.pojos.RoleDept</class>
    <class>cn.gson.demo.model.pojos.RolePerm</class>
    <class>cn.gson.demo.model.pojos.Schedu</class>
    <class>cn.gson.demo.model.pojos.Shift</class>
    <class>cn.gson.demo.model.pojos.ShiftType</class>
    <class>cn.gson.demo.model.pojos.Title</class>
    <class>cn.gson.demo.model.pojos.Usere</class>

    <properties>
      <property name="hibernate.archive.autodetection" value="class"/>
      <!--是否显示执行的sql语句-->
      <property name="hibernate.show_sql" value="true"/>
      <!--是否格式化sql语句-->
      <property name="hibernate.format_sql" value="true"/>
      <property name="hibernate.connection.url" value="jdbc:oracle:thin:@127.0.0.1:1521:XE"/>
      <property name="hibernate.connection.driver_class" value="oracle.jdbc.OracleDriver"/>
      <!--      <property name="hibernate.connection.url" value="jdbc:oracle:thin:@127.0.0.1:1521:XE"/>-->
      <!--      <property name="hibernate.connection.driver_class" value="oracle.jdbc.OracleDriver"/>-->
    </properties>
  </persistence-unit>
</persistence>
